@model IList<PublisherModel>
@using Fara.Web.Framework.UI;
@using Fara.Web.Models.Catalog;
@if (Model.Count > 0)
{
    
    <div class="publishers">
        @if (Model.Count == 1)
        {
            @T("Products.Publisher")<text>:</text>
        }
        else
        {
            @T("Products.Publishers")<text>:</text>
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <a href="@Url.RouteUrl("Publisher", new { publisherId = item.Id, SeName = item.SeName })">@item.Name</a>
            if (i != Model.Count - 1)
            {
            <text>,</text>
            }
        }
    </div>
}
@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.Miscellaneous.Editable.EditableRedirectorModel
@{
    Layout = "_RedirectorsLayout.cshtml";
    Html.AddLocalizedTitleParts(StatisticsSectionConstants.RedirectorsController.Edit.Metadata.Title, Model.TargetUrl);
    Html.AddBreadcrumbParts(Html.LocalizedRouteLinkWithId(StatisticsSectionConstants.RedirectorsController.Edit.Metadata.Title, new[] {Model.TargetUrl}, StatisticsSectionConstants.RedirectorsController.Edit.RouteName, Model.Id));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(StatisticsSectionConstants.RedirectorsController.Edit.Metadata.Title, Model.TargetUrl) 
            <small>(@Html.LocalizedBackToLink(StatisticsSectionConstants.RedirectorsController.List.Metadata.Title, StatisticsSectionConstants.RedirectorsController.List.RouteName, StatisticsSectionConstants.RedirectorsController.List.Defaults))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.Custom().BeginRouteFormWithId(StatisticsSectionConstants.RedirectorsController.Edit.RouteName, Model.Id)) {
        <div class="row">
            <div class="span4">
                <h2>@Html.T(StatisticsSectionConstants.RedirectorsController.Edit.Metadata.Title, Model.TargetUrl)</h2>
                <p>@Html.T(StatisticsSectionConstants.RedirectorsController.Edit.Metadata.Description)</p>
            </div>
            <div class="span12">
                @Html.Custom().HiddenFor(enm => enm.Id)
                @Html.Custom().TextBoxFor(erm => erm.UsageTimes, new {
                    @class = "mini"
                })
                @Html.Partial("_NewOrEdit", Model)
            </div>
        </div>
        @Html.Partial("_EditActions")
    }
</section>
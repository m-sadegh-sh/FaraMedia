@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.ContentManagement.Editable.EditableCategoryModel
@{
    Layout = "_CategoriesLayout.cshtml";
    Html.AddLocalizedTitleParts(NewsSectionConstants.CategoriesController.Edit.Metadata.Title, Model.Title);
    Html.AddBreadcrumbParts(Html.LocalizedRouteLinkWithId(NewsSectionConstants.CategoriesController.Edit.Metadata.Title, new[] {Model.Title}, NewsSectionConstants.CategoriesController.Edit.RouteName, Model.Id));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(NewsSectionConstants.CategoriesController.Edit.Metadata.Title, Model.Title)
            <small>(@Html.LocalizedBackToLink(NewsSectionConstants.CategoriesController.List.Metadata.Title, NewsSectionConstants.CategoriesController.List.RouteName, NewsSectionConstants.CategoriesController.List.Defaults))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.Custom().BeginRouteFormWithId(NewsSectionConstants.CategoriesController.Edit.RouteName, Model.Id)) {
        <div class="row">
            <div class="span4">
                <h2>  @Html.T(NewsSectionConstants.CategoriesController.Edit.Metadata.Title, Model.Title)</h2>
                <p>@Html.T(NewsSectionConstants.CategoriesController.Edit.Metadata.Description)</p>
            </div>
            <div class="span12">
                @Html.Custom().HiddenFor(ecm => ecm.Id)
                @Html.Partial("_NewOrEdit", Model)
            </div>
        </div>
        @Html.Custom().EditorFor(ecm => ecm.Metadata)
        @Html.Partial("_EditActions")
    }
</section>
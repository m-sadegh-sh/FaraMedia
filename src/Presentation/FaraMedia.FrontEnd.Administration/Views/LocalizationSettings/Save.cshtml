@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Data.Schemas.Configuration
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.Configuration.EditableLocalizationSettingsModel
@{
    Layout = "~/Views/Shared/Masters/_SettingsSectionLayout.cshtml";
    Html.AddTitleParts(Html.T(SettingsSectionConstants.SystematicSettingsController.Save.Metadata.Title));
    Html.AddBreadcrumbParts(Html.LocalizedRouteLink(SettingsSectionConstants.SystematicSettingsController.Save.Metadata.Title, SettingsSectionConstants.SystematicSettingsController.Save.RouteName));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(SettingsSectionConstants.SystematicSettingsController.Save.Metadata.Title) 
            <small>(@Html.LocalizedBackToLink(SettingsSectionConstants.Metadata.Title, SettingsSectionConstants.RouteName, null))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.BeginRouteForm(SettingsSectionConstants.SystematicSettingsController.Save.RouteName)) {
        <div class="row">
            <div class="span4">
                <p>@Html.T(SettingsSectionConstants.SystematicSettingsController.Save.Metadata.Description)</p>
            </div>
            <div class="span12">
                <fieldset>
                    <legend>
                        @Html.T(SettingsSectionConstants.SystematicSettingsController.Save.Metadata.Title)
                    </legend>
                    @Html.Custom().CheckBoxFor(elsm => elsm.UseImagesForLanguageSelection)
                    @Html.Custom().CheckBoxFor(elsm => elsm.LoadAllLocaleRecordsOnStartup)
                    @Html.Custom().DropDownListFor(elsm => elsm.DefaultAdminAreaLanguageId, Model.AvailableLanguages, Html.T(LocalizationSettingsConstants.Fields.DefaultAdminAreaLanguageId.Hints))
                </fieldset>
            </div>
        </div>
                @Html.Partial("_SaveActions")
    }
</section>
@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.Fundamentals.Editable.EditableAlbumModel
@{
    Layout = "_AlbumsLayout.cshtml";
    Html.AddLocalizedTitleParts(AlbumsSectionConstants.FundamentalsController.New.Metadata.Title);
    Html.AddBreadcrumbParts(Html.LocalizedRouteLink(AlbumsSectionConstants.FundamentalsController.New.Metadata.Title, AlbumsSectionConstants.FundamentalsController.New.RouteName));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(AlbumsSectionConstants.FundamentalsController.New.Metadata.Title) 
            <small>(@Html.LocalizedBackToLink(AlbumsSectionConstants.FundamentalsController.List.Metadata.Title, AlbumsSectionConstants.FundamentalsController.List.RouteName, AlbumsSectionConstants.FundamentalsController.List.Defaults))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.Custom().BeginRouteForm(AlbumsSectionConstants.FundamentalsController.New.RouteName)) {
        <div class="row">
            <div class="span4">
                <h2>@Html.T(AlbumsSectionConstants.FundamentalsController.New.Metadata.Title)</h2>
                <p>@Html.T(AlbumsSectionConstants.FundamentalsController.New.Metadata.Description)</p>
            </div>
            <div class="span12">
                @Html.Partial("_NewOrEdit", Model)
            </div>
        </div>
        @Html.Custom().EditorFor(enm => enm.Metadata)
        @Html.Partial("_NewActions")
    }
</section>
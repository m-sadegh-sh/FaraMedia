@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.Configuration.EditableMessageTemplateSettingsModel
@{
    Layout = "~/Views/Shared/Masters/_SettingsSectionLayout.cshtml";
    Html.AddTitleParts(Html.T(SettingsSectionConstants.MessageTemplateSettingsController.Save.Metadata.Title));
    Html.AddBreadcrumbParts(Html.LocalizedRouteLink(SettingsSectionConstants.MessageTemplateSettingsController.Save.Metadata.Title, SettingsSectionConstants.MessageTemplateSettingsController.Save.RouteName));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(SettingsSectionConstants.MessageTemplateSettingsController.Save.Metadata.Title) 
            <small>(@Html.LocalizedBackToLink(SettingsSectionConstants.Metadata.Title, SettingsSectionConstants.RouteName, null))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.BeginRouteForm(SettingsSectionConstants.MessageTemplateSettingsController.Save.RouteName)) {
        <div class="row">
            <div class="span4">
                <p>@Html.T(SettingsSectionConstants.MessageTemplateSettingsController.Save.Metadata.Description)</p>
            </div>
            <div class="span12">
                <fieldset>
                    <legend>
                        @Html.T(SettingsSectionConstants.MessageTemplateSettingsController.Save.Metadata.Title)
                    </legend>
                    @Html.Custom().CheckBoxFor(emtsm => emtsm.CaseInvariantReplacement)
                    @Html.Custom().TextBoxFor(emtsm => emtsm.Color1, new {
                        @class = "medium left"
                    })
                    @Html.Custom().TextBoxFor(emtsm => emtsm.Color2, new {
                        @class = "medium left"
                    })
                    @Html.Custom().TextBoxFor(emtsm => emtsm.Color3, new {
                        @class = "medium left"
                    })
                </fieldset>
            </div>
        </div>
                @Html.Partial("_SaveActions")
    }
</section>
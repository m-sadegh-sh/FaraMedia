@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.Albums.Editable.EditableAlbumModel
@{
    Layout = "_AlbumsLayout.cshtml";
    Html.AddLocalizedTitleParts(AlbumsSectionConstants.AlbumsController.Edit.Metadata.Title, Model.Title);
    Html.AddBreadcrumbParts(Html.LocalizedRouteLinkWithId(AlbumsSectionConstants.AlbumsController.Edit.Metadata.Title, new[] {Model.Title}, AlbumsSectionConstants.AlbumsController.Edit.RouteName, Model.Id));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(AlbumsSectionConstants.AlbumsController.Edit.Metadata.Title, Model.Title) 
            <small>(@Html.LocalizedBackToLink(AlbumsSectionConstants.AlbumsController.List.Metadata.Title, AlbumsSectionConstants.AlbumsController.List.RouteName, AlbumsSectionConstants.AlbumsController.List.Defaults))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.Custom().BeginRouteFormWithId(AlbumsSectionConstants.AlbumsController.Edit.RouteName, Model.Id)) {
        <div class="row">
            <div class="span4">
                <h2> @Html.T(AlbumsSectionConstants.AlbumsController.Edit.Metadata.Title, Model.Title)</h2>
                <p>@Html.T(AlbumsSectionConstants.AlbumsController.Edit.Metadata.Description)</p>
            </div>
            <div class="span12">
                @Html.Custom().HiddenFor(eam => eam.Id)
                @Html.Partial("_NewOrEdit", Model)
            </div>
        </div>
        @Html.Custom().EditorFor(eam => eam.Metadata)
        @Html.Partial("_EditActions")
    }
</section>
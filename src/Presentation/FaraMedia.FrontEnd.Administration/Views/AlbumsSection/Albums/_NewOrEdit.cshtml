@using FaraMedia.Data.Schemas.Albums
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@model FaraMedia.FrontEnd.Administration.Models.Albums.Editable.EditableAlbumModel
@Html.Custom().CheckBoxFor(eam => eam.AllowComments)
@Html.Custom().DatePickerFor(eam => eam.ReleasedOnDay, eam => eam.ReleasedOnMonth, eam => eam.ReleasedOnYear, selectedDay: Model.ReleasedOnDay, selectedMonth: Model.ReleasedOnMonth, selectedYear: Model.ReleasedOnYear, beginYearOffset: - 10, endYearOffset: 10)
@Html.Custom().TextBoxFor(eam => eam.Title, new {
    @class = "xxlarge"
})
@Html.Custom().TextAreaFor(eam => eam.Description, 10, 70)
@Html.Custom().DropDownListFor(eam => eam.PublisherId, Model.AvailablePublishers, Html.T(AlbumConstants.Fields.Publisher.Hints))
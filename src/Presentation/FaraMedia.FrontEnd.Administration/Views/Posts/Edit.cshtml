@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.Blogs.Editable.EditablePostModel
@{
    Layout = "_PostsLayout.cshtml";
    Html.AddLocalizedTitleParts(BloggingSectionConstants.PostsController.Edit.Metadata.Title, Model.Title);
    Html.AddBreadcrumbParts(Html.LocalizedRouteLinkWithId(BloggingSectionConstants.PostsController.Edit.Metadata.Title, new[] {Model.Title}, BloggingSectionConstants.PostsController.Edit.RouteName, Model.Id));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(BloggingSectionConstants.PostsController.Edit.Metadata.Title, Model.Title) 
            <small>(@Html.LocalizedBackToLink(BloggingSectionConstants.PostsController.List.Metadata.Title, BloggingSectionConstants.PostsController.List.RouteName, BloggingSectionConstants.PostsController.List.Defaults))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.Custom().BeginRouteFormWithId(BloggingSectionConstants.PostsController.Edit.RouteName, Model.Id)) {
        <div class="row">
            <div class="span4">
                <h2>@Html.T(BloggingSectionConstants.PostsController.Edit.Metadata.Title, Model.Title)</h2>
                <p>@Html.T(BloggingSectionConstants.PostsController.Edit.Metadata.Description)</p>
            </div>
            <div class="span12">
                @Html.Custom().HiddenFor(epm => epm.Id)
                @Html.Partial("_NewOrEdit", Model)
            </div>
        </div>
        @Html.Custom().EditorFor(epm => epm.Metadata)
        @Html.Partial("_EditActions")
    }
</section>
@using System.Web.Mvc.Html
@using FaraMedia.Data.Schemas.Layout.Sections
@using FaraMedia.Web.Framework.Mvc.Extensions
@using FaraMedia.Web.Framework.Mvc.UI
@using FaraMedia.Web.Framework.Routing
@using FaraMedia.Web.Framework.UI
@model FaraMedia.FrontEnd.Administration.Models.FileManagement.Editable.EditableDownloadModel
@{
    Layout = "_DownloadsLayout.cshtml";
    Html.AddLocalizedTitleParts(MediaSectionConstants.DownloadsController.Edit.Metadata.Title, Model.FileName??Model.DownloadUrl);
    Html.AddBreadcrumbParts(Html.LocalizedRouteLinkWithId(MediaSectionConstants.DownloadsController.Edit.Metadata.Title, new[] { Model.FileName??Model.DownloadUrl}, MediaSectionConstants.DownloadsController.Edit.RouteName, Model.Id));
}
<section>
    <div class="page-header">
        <h1>
            @Html.T(MediaSectionConstants.DownloadsController.Edit.Metadata.Title, Model.FileName ?? Model.DownloadUrl)
            <small>(@Html.LocalizedBackToLink(MediaSectionConstants.DownloadsController.List.Metadata.Title, MediaSectionConstants.DownloadsController.List.RouteName, MediaSectionConstants.DownloadsController.List.Defaults))</small>
        </h1>
    </div>
    @Html.Custom().ValidationSummary(true)
    @using (Html.Custom().BeginRouteFormWithId(MediaSectionConstants.DownloadsController.Edit.RouteName, Model.Id))
    {
        <div class="row">
            <div class="span4">
                <h2>  @Html.T(MediaSectionConstants.DownloadsController.Edit.Metadata.Title, Model.FileName ?? Model.DownloadUrl)</h2>
                <p>@Html.T(MediaSectionConstants.DownloadsController.Edit.Metadata.Description)</p>
            </div>
            <div class="span12">
                @Html.Custom().HiddenFor(edm => edm.Id)
                @Html.Partial("_NewOrEdit", Model)
            </div>
        </div>
        @Html.Partial("_EditActions")
    }
</section>